unit BisKrieltDataSubjectsFm;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, ExtCtrls, ComCtrls, ActnList,
  BisDataGridFm, BisDataTreeFm;

type
  TBisKrieltDataSubjectsForm = class(TBisDataTreeForm)
  private
    { Private declarations }
  public
    { Public declarations }
  end;

  TBisKrieltDataMenusFormIface=class(TBisDataTreeFormIface)
  public
    constructor Create(AOwner: TComponent); override;
  end;

var
  BisKrieltDataSubjectsForm: TBisKrieltDataSubjectsForm;

implementation

uses BisKrieltDataMenuEditFm;

{$R *.dfm}

{ TBisKrieltDataMenusFormIface }

constructor TBisKrieltDataMenusFormIface.Create(AOwner: TComponent);
begin
  inherited Create(AOwner);
  FormClass:=TBisKrieltDataMenusForm;
  FilterClass:=TBisKrieltDataMenuEditFormIface;
  InsertClasses.Add(TBisKrieltDataMenuInsertFormIface);
  InsertClasses.Add(TBisKrieltDataMenuInsertChildFormIface);
  UpdateClass:=TBisKrieltDataMenuUpdateFormIface;
  DeleteClass:=TBisKrieltDataMenuDeleteFormIface;
  Permissions.Enabled:=true;
//  Available:=true;
  ProviderName:='S_MENUS';
  with FieldNames do begin
    AddKey('MENU_ID');
    AddParentKey('PARENT_ID');
    AddInvisible('INTERFACE_ID');
    AddInvisible('INTERFACE_NAME');
    AddInvisible('DESCRIPTION');
    AddInvisible('SHORTCUT');
    Add('NAME','Наименование',225);
    Add('PARENT_NAME','Родитель',175);
    Add('PRIORITY','Порядок',50);
  end;
  Orders.Add('LEVEL');
  Orders.Add('PRIORITY');
end;

end.
