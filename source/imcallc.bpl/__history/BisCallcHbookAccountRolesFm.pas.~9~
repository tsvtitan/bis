unit BisCallcHbookAccountRolesFm;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, BisDataGridFm, StdCtrls, ExtCtrls, ComCtrls, BisFm, ActnList;

type
  TBiCallcHbookAccountRolesForm = class(TBisDataGridForm)
  private
    { Private declarations }
  public
    { Public declarations }
  end;

  TBiCallcHbookAccountRolesFormIface=class(TBisDataGridFormIface)
  public
    constructor Create(AOwner: TComponent); override;
  end;

var
  BiCallcHbookAccountRolesForm: TBiCallcHbookAccountRolesForm;

implementation

{$R *.dfm}

uses BisFilterGroups, BisCallcHbookAccountEditFm;

{ TBiCallcHbookAccountRolesFormIface }

constructor TBiCallcHbookAccountRolesFormIface.Create(AOwner: TComponent);
begin
  inherited Create(AOwner);
  FormClass:=TBiCallcHbookAccountRolesForm;
{  InsertClass:=TBisCallcHbookAccountInsertFormIface;
  UpdateClass:=TBisCallcHbookAccountUpdateFormIface;
  DeleteClass:=TBisCallcHbookAccountDeleteFormIface;}
  ProviderName:='S_ACCOUNT_ROLES';
  with FieldNames do begin
    AddKey('ROLE_ID');
    AddKey('ACCOUNT_ID');
    Add('ROLE_NAME','Роль',150);
    Add('USER_NAME','Логин',150);
  end;
  Orders.Add('ROLE_NAME');
end;

end.
