interface

uses Sysutils;

{$IFDEF VER120}
procedure FreeAndNil(var Obj);
{$ENDIF}

implementation

{$IFDEF VER120}
procedure FreeAndNil(var Obj);
var
  P: TObject;
begin
  P := TObject(Obj);
  TObject(Obj) := nil;  // clear the reference before destroying the object
  P.Free;
end;
{$ENDIF}

end.
 