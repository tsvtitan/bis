unit BisRegCodeFm;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, ExtCtrls,
  BisDialogFm;

type
  TBisRegCodeForm = class(TBisDialogForm)
    LabelCode: TLabel;
    EditCode: TEdit;
    GroupBoxDesc: TGroupBox;
    MemoDesc: TMemo;
    procedure EditCodeChange(Sender: TObject);
  private
    FCode: String;
    FChecked: Boolean;
  public
    property Code: String read FCode write FCode;
    property Checked: Boolean read FChecked write FChecked;
  end;

var
  BisRegCodeForm: TBisRegCodeForm;

implementation

{$R *.dfm}

{ TBisRegCodeForm }

procedure TBisRegCodeForm.EditCodeChange(Sender: TObject);
begin
  ButtonOk.Enabled:=Trim(EditCode.Text)<>'';
end;

end.
