unit BisCounters;

interface

uses Classes, Contnrs;

type
  TBisCounter=class(TObject)
  end;

  TBisCounters=class(TObjectList)
  private
    function GetItem(Index: Integer): TBisCounter;
  public

    procedure Reset;

    property Items[Index: Integer]: TBisCounter read GetItem; default;
  end;

implementation

{ TBisCounters }

function TBisCounters.GetItem(Index: Integer): TBisCounter;
begin
  Result:=TBisCounter(inherited Items[Index]);
end;

procedure TBisCounters.Reset;
var
  i: Integer;
  Item: TBisCounter;
begin
  for i:=0 to Count-1 do
    Items[i].Reset;
end;

end.
