  Sheet:=Excel.ActiveSheet;

  Sheet.Range['A1']:='сниму в аренду землю';
  Sheet.Range['C1']:='в других населенных пунктах';

  LastRow:=5;

  Repeat
    Sheet.Range['A'+IntToStr(LastRow-1)]:=Provider.FieldByName('Населенный пункт').AsString;
    Sheet.Range['B'+IntToStr(LastRow-1)]:=Provider.FieldByName('Участок').AsString;
